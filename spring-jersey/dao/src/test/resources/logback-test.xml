<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%10.10thread] %40.40logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.benwhitehead.tutorials.spring.jersey" level="trace"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>

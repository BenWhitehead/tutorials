<configuration>
    <!-- Docs about config: http://logback.qos.ch/manual/configuration.html -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%25.25thread] %50.50logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.github.benwhitehead.tutorials.spring.jersey" level="debug"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
